@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <div class="row">
        <div class="col-2">
            <label><b style="color:floralwhite;width:150px;">Chart Type</b></label>
        </div>
        <div class="col-3">
            <select id="ChartType" class="form-control" style="width:150px;">
                <option selected>Select Chart Type</option>
                <option>bar</option>
                <option>line</option>
                <option>pie</option>
                <option>doughnut</option>
            </select>
        </div>
        <div class="col-6">
            <input id="ID" value="Show Graph" type="button" class="btn btn-outline-light" />
        </div>
    </div>
</p>
<br />
<div style="display: flex;justify-content: space-between;">
    <a asp-controller="Graph" asp-action="showDevice1PerHour" style="text-decoration: none;color: black;background: lavender;padding: 7px;">
        Device1 Per Hour
    </a>
    <a asp-controller="Graph" asp-action="showDevice1PerDay" style="text-decoration: none;color: black;background: lavender;padding: 7px;">
        Device1 Per Day
    </a>
    <a asp-controller="Graph" asp-action="showDevice1PerMonth" style="text-decoration: none;color: black;background: lavender;padding: 7px;">
        Device1 Per Month
    </a>
</div>

<div id="ChartView">
<canvas id="myChart" ></canvas>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script type="text/javascript"> 
    $(function(){
        $("#ID").click(function(){

            var chartType = $("#ChartType").val();
            var chartView = document.getElementById('ChartView');

            chartView.innerHTML = '&nbsp;';

            $('#ChartView').append('<canvas id="myChart" style="max-width:750px;max-height:400px;"><canvas>');

            $.ajax({
                type:"POST",
                url: "/Graph/GetSalesData",
                data:"",
                contextType:"application/json; charset=utf-8",
                dataType:"json",
                success: OnSuccessResult,
                error: OnError
            }); 

            function OnSuccessResult(data) {
                var _data = data;
                var _chartLabels = _data[0];
                var _chartData = _data[1];
                var _chartData2 = _data[2];
                var _chartData3 = _data[3];
                var barColor = ["red", "green", "blue", "orange", "brown", "purple"];

                new Chart("myChart",
                {
                    type:chartType,
                    data:{
                         labels: _chartLabels,

                            //labels: ["KWHour", "Current", "Volt"],
                        datasets:[{
                            label: 'Current',
                                backgroundColor: barColor[0],
                                borderColor: "orange",
                            data:_chartData
                            }, {
                                label: 'KWHour',
                                data: _chartData2,
                                borderColor: "green",
                                backgroundColor: barColor[1],
                                fill: false
                            }, {
                                label: 'Volt',
                                data: _chartData3,
                                borderColor: "red",
                                backgroundColor: barColor[2],
                                fill: false
                            }]
                    }
                });
             }
            function OnError(err) {

            }
        })
    })
</script>
<br />
